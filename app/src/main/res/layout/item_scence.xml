<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/item_scence_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/item_scence_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="西安城墙"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/item_scence_img"
            app:layout_constraintTop_toTopOf="@+id/item_scence_img" />

        <TextView
            android:id="@+id/item_scence_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:maxLines="2"
            android:text="推荐语 这是推荐语 这是个好地方 大家都来玩一玩推荐语 这是个好地方 大家都来玩一玩个好地方 大家都来玩一玩"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/item_scence_img"
            app:layout_constraintTop_toBottomOf="@+id/item_scence_pos" />

        <TextView
            android:id="@+id/item_scence_pos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="位于西安"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@+id/item_scence_img"
            app:layout_constraintTop_toBottomOf="@+id/item_scence_title" />

        <TextView
            android:id="@+id/item_scence_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/shape_lable"
            android:text="景点"
            android:textColor="#ffffff"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/item_scence_title"
            app:layout_constraintStart_toEndOf="@+id/item_scence_title"
            app:layout_constraintTop_toTopOf="@+id/item_scence_title" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>